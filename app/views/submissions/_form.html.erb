<%= form_for @submission, :html => {:class => "form-group"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :body %>
  <%= f.text_field :body, :class => 'body-input' %>

  <%= f.submit "submit", :class => "btn btn-primary" %>
<% end %>
